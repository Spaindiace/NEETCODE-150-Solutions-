class Solution {
public:
    vector<int> spiralOrder(vector<vector<int>>& matrix) {
        int n = matrix[0].size();
        int l = 0;
        int r = n - 1;
        int t = 0;
        int b = matrix.size()- 1;
        vector<int> res;
        while (l <= r && t <= b) {
            for (int i = l; i <= r; i++) {
                res.push_back(matrix[t][i]);
            }
            t++;
            for (int i = t; i <= b; i++) {
                res.push_back(matrix[i][r]);
            }
            r--;
            if (t > b || l > r) {
                break;
            }
            for (int i = r; i >= l; i--) {
                res.push_back(matrix[b][i]);
            }
            b--;
            for (int i = b; i >= t; i--) {
                res.push_back(matrix[i][l]);
            }
            l++;
        }
        return res;
    }
};

